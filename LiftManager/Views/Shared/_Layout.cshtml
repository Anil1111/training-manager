<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - LiftManager</title>
    <link href='https://fonts.googleapis.com/css?family=Lato:400,700' rel='stylesheet' type='text/css'>
    <link rel="shortcut icon" href="~/img/Dumbell-Logo.png" type="image/x-icon" />
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @RenderSection("styles", required: false)
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @*@Html.ActionLink("LiftManager", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })*@
                <a href="/">
                    <img src="~/img/LM-Logo-White.png" height="30" width="180" style="margin-top: 10px; margin-right:20px;" />
                </a>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>@Html.ActionLink("Users", "All", "User")</li>
                    <li>@Html.ActionLink("User Plans", "Index", "Plans")</li>
                    <li>@Html.ActionLink("Add a Plan", "Create", "Plans")</li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            @if (User.Identity.IsAuthenticated)
            {
                <p class="text-center" style="font-size:12px;">@User.Identity.Name | &copy; @DateTime.Now.Year | LiftManager | Version 1.0</p>
            }
            else
            {
                <p class="text-center" style="font-size:12px;">&copy; @DateTime.Now.Year | LiftManager | Version 1.0</p>
            }
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/app")
    @RenderSection("scripts", required: false)
</body>
</html>
